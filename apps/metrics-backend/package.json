{
  "name": "@partylayer/metrics-backend",
  "version": "0.1.0",
  "private": true,
  "description": "PartyLayer Metrics Aggregation Backend (Cloudflare Workers + D1)",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute partylayer-metrics --local --file=./src/db/schema.sql",
    "db:init:remote": "wrangler d1 execute partylayer-metrics --file=./src/db/schema.sql",
    "export": "tsx src/cli/export.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.24.0",
    "tsx": "^4.7.0"
  }
}
